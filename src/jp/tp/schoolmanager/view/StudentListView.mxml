			<s:GridColumn dataField="looks" headerText="容姿" labelFunction="{numformat}">
				<s:itemRenderer>
					<fx:Component>
						<view:StudentItemRenderer textAlign="right" />
					</fx:Component>
				</s:itemRenderer>
			</s:GridColumn>		
			<!--
			<s:GridColumn dataField="looksScore" headerText="容偏" labelFunction="{numformat}" width="40">
				<s:itemRenderer>
					<fx:Component>
						<view:StudentItemRenderer textAlign="right" />
					</fx:Component>
				</s:itemRenderer>
			</s:GridColumn>				
			-->
			
			<s:GridColumn dataField="sociality" headerText="社交性" labelFunction="{numformat}">
				<s:itemRenderer>
					<fx:Component>
						<view:StudentItemRenderer textAlign="right" />
					</fx:Component>
				</s:itemRenderer>
			</s:GridColumn>
			<!--
			<s:GridColumn dataField="socialityScore" headerText="社偏" labelFunction="{numformat}" width="40">
				<s:itemRenderer>
					<fx:Component>
						<view:StudentItemRenderer textAlign="right" />
					</fx:Component>
				</s:itemRenderer>
			</s:GridColumn>
			-->
			
			
			<s:GridColumn dataField="wealth" headerText="財力" labelFunction="{numformat}">
				<s:itemRenderer>
					<fx:Component>
						<view:StudentItemRenderer textAlign="right" />
					</fx:Component>
				</s:itemRenderer>
			</s:GridColumn>
			<!--
			<s:GridColumn dataField="wealthScore" headerText="財偏" labelFunction="{numformat}" width="40">
