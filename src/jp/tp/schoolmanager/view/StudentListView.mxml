			-->

			<s:GridColumn dataField="intelligence" headerText="学力" labelFunction="{numformat}">
				<s:itemRenderer>
					<fx:Component>
						<view:StudentItemRenderer textAlign="right" />
					</fx:Component>
				</s:itemRenderer>
			</s:GridColumn>					
